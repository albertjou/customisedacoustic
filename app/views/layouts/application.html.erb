<head>
 <meta charset="utf-8" />

 <!-- Uncomment to make IE8 render like IE7 -->
 <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

 <!-- Set the viewport width to device width for mobile -->
 <meta name="viewport" content="width=device-width, initial-scale=1.0" />

 <title><%= content_for?(:title) ? yield(:title) : "Customised Acoustic" %></title>

 <%= stylesheet_link_tag    "application" %>
 <%= javascript_include_tag "vendor/custom.modernizr" %>
 <%= csrf_meta_tags %>
</head>

<body>

  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><%= link_to 'Customised Acoustic', root_path %></h1>
      </li>
    </ul><!-- title area -->

    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <li class="divider hide-for-small"></li>
        <% if user_signed_in? %>
        <li class="name">
          <a href="#">Hi, <%= current_user.name %></a>
        </li>
        <li class="has-form">
          <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, :class => 'button' %>
        </li>
        <% else %>
        <li>
          <%= link_to 'New user', new_user_registration_path %>
        </li>
        <li class="has-form">
          <%= link_to 'Login', new_user_session_path, :class => 'button' %>
        </li>
        <% end %>
      </ul><!-- right -->
    </section>
  </nav>

  <div class="row">
    <div class="small-12 large-12 small-centered large-centered columns">
      <%= yield %>

    </div>

  </div>
<footer>
<div class="customacoustic-footer-bottom">
      <div class="row">
        <div class="large-4 push-8 columns">
          <ul class="home-social">
              <li><a href="http://www.twitter.com/customacoustic" class="twitter"></a></li>
              <li><a href="http://www.facebook.com/customacoustic" class="facebook"></a></li>
              <li><a href="http://customacoustic.com/contact" class="mail"></a></li>
            </ul>
         </div>
         <div class="large-8 pull-4 columns">
            <%= link_to "Customised Acoustic", root_path %>
            <ul class="customacoustic-links">
              <li><a href="http://customacoustic.com/about">About</a></li>
              <li><a href="http://customacoustic.com/blog">Blog</a></li>
              <li><a href="http://customacoustic.com/news">News<span class="show-for-medium-up"> &amp; Events</span></a></li>
              <li><a href="http://customacoustic.com/contact">Contact</a></li>
              <li><a href="http://customacoustic.com/sitemap">Sitemap</a></li>
           </ul>
           <p class="copyright">Â© 2013 CustomAcoustic. All rights reserved.</p>
        </div>
      </div>
    </div>
</footer>
  <%= javascript_include_tag "application" %>
</body>
</html>
