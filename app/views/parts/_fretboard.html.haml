%ul.fretboard-shop{"data-orbit" => "", "data-options" => "timer: false;"}
  - @fretboards.each do |fretboard|
    %li{"data-orbit-slide" => "#{fretboard.name}"}
      %h2.product-name
        %span.has-tip{"data-tooltip" => "", :title => "#{fretboard.description}"}
          = fretboard.name
      %h3.product-price{"data-price" => "#{fretboard.price}"}
        = number_to_currency(fretboard.price)
      = image_tag("#{fretboard.image}")